---
import { Image } from "astro:assets";
import logo from "../images/Hardwicke Logo.png";
---

<div class="navbar">
  <div class="bigger-screens">
    <div class="logo-img">
      <Image class="logo" src={logo} alt="Hardwicke FC logo" />
    </div>
    <div class="links">
      <ul>
        <li><a class="active" href="../../index.html">Home</a></li>
        <li><a href="/blog/blog.html">Our Blog</a></li>
        <li><a href="2nd Hardwicke Team.html">Second Team</a></li>
        <li><a href="sponsors.html">Sponsors</a></li>
        <li><a href="contact.html">Contact</a></li>
      </ul>
    </div>
  </div>
  <!---Mobile Menu -->
  <input type="checkbox" id="hamburger-input" class="burger-shower" />
  <label id="hamburger-menu" for="hamburger-input">
    <nav id="sidebar-menu">
      <h3>Menu</h3>
      <ul>
        <li><a class="active" href="../../index.html">Home</a></li>
        <li><a href="/blog/blog.html">Our Blog</a></li>
        <li><a href="2nd Hardwicke Team.html"> Second Team</a></li>
        <li><a href="sponsors.html">Sponsors</a></li>
        <li><a href="contact.html">Contact Us</a></li>
      </ul>
    </nav>
  </label>
</div>
<style>
  .logo-img {
    width: 100%;
  }
  .logo {
    width: 60px;
    height: auto;
  }
  .navbar {
    width: 100%;
    height: 80px;
    background-color: var(--main-color);
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.35s,
      visibility 0.35s,
      height 0.35s;
    overflow: hidden;
    background: black;
    z-index: -1;
  }

  #main-menu {
    display: block;
    height: 100px;
    width: 100%;
    background: #3d0e61;
    margin: 0px;
    z-index: 9;
  }

  #main-menu ul {
    max-width: 800px;
    width: 100%;
    max-height: 100%;
    margin: 0px auto;
    padding: 0px;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    z-index: 9;
  }

  #main-menu li {
    list-style-type: none;
    font-size: 18px;
  }

  #main-menu a {
    color: #b9faf8;
    font-size: 18px;
    text-decoration: none;
  }

  #main-menu a:hover {
    text-decoration: underline;
  }

  #hamburger-input {
    display: none;
  }

  #hamburger-menu {
    position: absolute;
    top: 15px;
    left: 20px;
    width: 50px;
    height: 50px;
    display: none;
    border: none;
    padding: 0px;
    margin: 0px;
    font-family: "Cabin", Sans-serif;
    background: linear-gradient(
      to bottom,
      #000,
      #000 20%,
      #00008b 20%,
      #00008b 40%,
      #000 40%,
      #000 60%,
      #00008b 60%,
      #00008b 80%,
      #000 80%,
      #000 100%
    );
  }

  #hamburger-menu #sidebar-menu {
    visibility: hidden;
    position: fixed;
    top: 0;
    left: -250px;
    width: 200px;
    height: 100%;
    background-color: #00008b;
    transition: 0.3s;
    padding: 0px 10px;
    box-sizing: border-box;
  }

  #hamburger-menu h3 {
    color: #fff;
    font-size: 2.2rem;
    margin-bottom: 4%;
    padding-top: 4%;
  }

  #hamburger-menu ul {
    padding-left: 0px;
  }

  #hamburger-menu li {
    list-style-type: none;
    line-height: 3rem;
  }

  #hamburger-menu a {
    color: #fff;
    font-size: 18px;
    text-decoration: none;
  }

  #hamburger-menu a:hover {
    text-decoration: underline;
  }

  #hamburger-input:checked + #hamburger-menu #sidebar-menu {
    visibility: visible;
    left: 0;
  }
  #hamburger-input:checked ~ .overlay {
    visibility: visible;
    opacity: 0.4;
  }

  /*Normal Menu*/

  /*Media*/

  @media screen and (max-width: 700px) {
    #main-menu {
      display: none;
    }
    #hamburger-menu {
      display: inline;
    }

    .nav {
      height: 60px;
    }
    .logo-img {
      display: flex;
      justify-content: end;
      height: 100%;
    }
    .logo {
      display: flex;
      margin-top: 10px;

      margin-right: 2%;
    }

    .text-float {
      opacity: 0%;
    }
    .links {
      display: none;
    }
  }

  @media only screen and (min-width: 701px) {
    .logo-img {
      display: flex;
      height: 100%;
    }

    .logo {
      display: flex;
      margin-top: auto;
      margin-bottom: auto;
      margin-left: 3%;
    }
    .links {
      display: flex;
      height: 100%;
      margin-top: auto;
      margin-bottom: auto;
    }

    li {
      text-decoration: none;
      list-style: none;
      padding: 10px 20px;
      width: 100%;
      transition: 0.5s;
      margin-top: auto;
      margin-bottom: auto;
    }
    li:hover {
      background-color: var(--secondary-color);
      text-decoration: none;
    }
    a {
      text-decoration: none;
      list-style: none;
      color: var(--text-color-light);
      font-size: 20px;
      width: 100%;
    }

    .bigger-screens {
      display: flex;
      justify-content: space-around;
      height: 100%;
    }
    ul {
      display: flex;
    }
  }

  @media only screen and (min-width: 1200px) {
    .text-float {
      padding-left: 35%;
    }
  }

  @media only screen and (min-width: 1400px) {
    .text-float {
      padding-left: 45%;
    }
  }

  @media only screen and (min-width: 1600px) {
    .text-float {
      padding-left: 50%;
    }
  }
</style>
