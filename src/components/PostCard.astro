---
const { frontmatter, url } = Astro.props;
const { title, date, author, image, description, category } = frontmatter;
import { slugify, fromatDate } from "./../js/utils";
import trebleWinners from "../images/blog-post-1.png";
import { Image } from "astro:assets";
---

public
<article class="card">
  <small>
    <a href={`/category/${slugify(category)}/`} class="badge">{category}</a>
  </small>

  <a href={url}
    ><Image class="trebble-winners" src={trebleWinners} alt={image.alt} /></a
  >
  <div class="content">
    <h1 class="heading">{frontmatter.title}</h1>
    <p class="text">
      by <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {
        fromatDate(date)
      }
    </p>
  </div>
</article>

<style>
  article {
    display: flex;
    width: 90%;
  }
</style>
