---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Nav from "../components/Nav.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="The Home Of Football" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Gabarito:wght@500&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />

    <title>{title}</title>
  </head>
  <body
    ><!---Nav -->
    <Nav />
    <slot />

    <style is:global>
      * {
        padding: 0;
        margin: 0;
        font-family: "Gabarito", cursive;
        overflow-x: none;
      }
      :root {
        --main-color: #00008b;
        --secondary-color: #00006a;
        --third-color: #fff;
        --text-color-light: #fff;
        --text-color-dark: #00008b;
        --transparent-background: rgba(0,0,139,.2);
        --transparent-background-darker: rgba(0,0,139,.7);
      }
      h1 {
        text-align: center;
        color: var(--text-color-light);
        margin: auto;
        font-size: clamp(24px, 8vw, 44px);
      }
      h3 {
        text-align: center;
        font-size: clamp(40px, 10vw, 70px);
        margin: 5%;
      }
      p {
        margin: 10%;
        line-height: 30px;
        font-size: clamp(18px, 2vw, 24px);
      }
      .content {
        padding-top: 5%;
        padding-bottom: 5%;
      }

      button {
        display: flex;
        width: 210px;
        font-size: 24px;
        height: 70px;
        margin-left: auto;
        margin-right: auto;
        justify-content: center;
        align-items: center;
        transition: 0.5s;
        color: var(--text-color-dark);
        margin-bottom: 5%;
        border: 5px solid var(--secondary-color);
      }

      button:hover {
        background-color: var(--main-color);
        color: var(--text-color-light);
      }
    </style>
  </body>
</html>
