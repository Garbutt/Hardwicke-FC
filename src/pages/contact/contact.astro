---
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";
import { Image } from "astro:assets";
import ContactUs from "../../images/contact us.png";
import contactImage from "../../images/blog-post-1-uncut.png";
---

<Layout title=" Contact" />

<header>
  <div class="container">
    <div class="header">
      <h3>Contact Us</h3>
      <Image class="contact" src={ContactUs} alt="Hardwicke Second Team" />
    </div>
    <!---Text Section -->
    <div class="content">
      <p>
        Are you looking to get in contact? Great! Our phone number and E-mail
        are listed below and we usually get back in touch fast. We look forward
        to hearing from you!
      </p>
    </div>
  </div>
  <section>
    <div class="image">
      <Image class="teamImage" src={contactImage} alt="Hardwicke Contact Us" />
    </div>
    <div class="contact-info">
      <h2>Contact Information</h2>
      <p>Phone Number : <span>087 342 5387</span></p>
      <p>E-Mail : <span>Hardwickefc@gmail.com</span></p>
    </div>
  </section>
</header>
<footer><Footer /></footer>
<style>
  header {
    height: 100%;
    width: 100%;
  }
  .header {
    display: flex;
    height: 20%;
    width: 100%;
    justify-content: center;
    align-items: center;
    margin-top: 5%;
    margin-bottom: 5%;
  }
  h3 {
    color: var(--text-color-dark);
  }
  .contact {
    width: 30%;
    height: auto;
    margin: 4%;
  }

  p {
    color: var(--text-color-dark);
  }

  .content {
    padding: 0%;
  }

  .image {
    display: flex;
  }
  .teamImage {
    width: 80%;
    height: auto;
    border: solid 5px var(--secondary-color);
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 0%;
    margin-top: 10%;
  }

  section {
    background-color: var(--main-color);
    padding-bottom: 5%;
  }

  h2 {
    color: var(--text-color-light);
    text-align: center;
  }

  p {
    color: var(--text-color-light);
    text-align: center;
  }
</style>
