---
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";
import { Image } from "astro:assets";
import phoneIcon from "../../images/phone-call.png";
import contactImage from "../../images/team-celebrating.png";
---

<Layout title=" Contact Us" />

<header>
  <div class="container">
    <div class="header">
      <h3>Contact Us</h3>
  
    </div>
    <!---Text Section -->
    <div class="contact-container">
      <div class="content">
        <p class="text-dark">
          Are you looking to get in contact? Great! Our phone number and E-mail
          are listed below and we usually get back in touch fast. We look forward
          to hearing from you!
        </p>
        <Image class="phoneIcon" src={phoneIcon} alt="Hardwicke Second Team" />
      </div>
    </div>
  </div>
  <section>
    <div class="image">
      <div class="contact-info">
        <span class="overlay">
          <h2>Contact Information</h2>
        <p>Phone Number : <br /><span>087 342 5387</span></p>
        <p>E-Mail : <br /><span>Hardwickefc@gmail.com</span></p>
        </span>
      </div>
    </div>
   
    <a href="../../index.html"><button>Return Home</button></a>
  </section>
</header>
<footer><Footer /></footer>
<style>
  header {
    height: 100%;
    width: 100%;
  }
  .header {
    display: flex;
    height: 20%;
    width: 100%;
    justify-content: center;
    align-items: center;
    margin-top: 5%;
    margin-bottom: 5%;
  }
  h3 {
    color: var(--text-color-dark);
    text-align: center;
  }
  .phoneIcon {
    width: 90%;
    max-width: 200px;
    height: 100%;
    padding: 2em;
  }

  .text-dark {
    color: var(--text-color-dark);
  }

.contact-container{
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 2em 0;
}

  .content {
    padding: 0;
    width: 90%;
    max-width: 1200px;
    background-color: var(--transparent-background);
    border-radius: 20px;

    display: flex;
    flex-direction: column-reverse;
    align-items: center;
    justify-content: space-evenly;
  }

  .image {
    display: flex;
    width: 100%;
   
  }
  .teamImage {
    width: 80%;
    max-width: 1200px;
    height: auto;
    border: solid 5px var(--third-color);
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 0%;
    margin-top: 10%;
  }

  section {
    background-color: var(--main-color);
    padding-bottom: 1em;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    width: 100%;
  }

  h2 {
    text-align: center;

  }

  p {
    text-align: center;
  }

  .contact-info {
    border: solid 5px var(--third-color);
    width: 80%;
    max-width: 1200px;
    margin: 2em auto;

    color: var(--text-color-light);
    background-image: url("/team-celebrating.png");
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }

  .overlay{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2em;
    
    text-decoration: none;
    background: var(--transparent-background-darker);
    z-index: 1;
  }

  .overlay p{
    margin: 0;
    padding: 2em 0 0 0;
  }


  span {
    text-decoration: underline;
  }

  a {
    text-decoration: none;
  }
  /*Media Query*/

  @media only screen and (min-width: 1000px) {
  
    .header {
      display: contents;
    }

    section {
      margin-top: 10%;
    }

    .content{
      flex-direction: row;
    }

    .phoneIcon{
      margin: 2em;
    }
  }
</style>
