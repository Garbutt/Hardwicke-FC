---
const title = "Hardwicke FC win the Treble";
const date = "09/10/2023";
const author = "Anthony Perry";
import postImage from "../../../src/images/blog-post-1.png";
const description = "Hardwicke FC win the treble with a nail biting season.";
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";
---

<Layout title="Hardwicke FC Win The Treble" />

<header class="container">
  <div class="content">
    <h2 class="heading">{title}</h2>
    <p class="text">by {author} â€¢ {date}</p>
    <Image
      class="image"
      src={postImage}
      alt="Hardwicke celebrating winning the treble"
    />
    <p>
      Hardwicke FC win the treble in 2023 after a nail biting seasons. Starting
      of with the Liddy Cup were Hardwicke won 6-5 on penos and Ryan King led
      them to victory
    </p>
  </div>
</header>
<Footer />
<style>
  .heading {
    color: var(--main-color);
    text-align: center;
    margin-left: 5%;
    margin-right: 5%;
    margin-top: 5%;
  }

  .text {
    text-align: center;
    color: var(--text-color-dark);
  }

  .image {
    display: flex;
    width: 80%;
    height: auto;
    border: solid 5px var(--secondary-color);
    margin-left: auto;
    margin-right: auto;
  }
</style>
